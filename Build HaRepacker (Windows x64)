name: Build HaRepacker Win64

on:
  push:
    branches: [ master ]
  workflow_dispatch:

jobs:
  build:
    runs-on: windows-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Setup .NET
        uses: actions/setup-dotnet@v3
        with:
          dotnet-version: '6.0.x'

      - name: Restore dependencies
        run: dotnet restore HaRepacker/HaRepacker.csproj

      - name: Build
        run: dotnet build HaRepacker/HaRepacker.csproj --configuration Release

      - name: Publish
        run: dotnet publish HaRepacker/HaRepacker.csproj --configuration Release --output ./output

      - name: Upload Artifact
        uses: actions/upload-artifact@v3
        with:
          name: HaRepacker-Win64
          path: ./output
